<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/total_files_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/consolas"
            android:text="@string/no_file"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/total_files_size_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/total_files_count_tv"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/consolas"
            android:text="@string/zero_byte"
            android:textSize="30sp" />

        <View
            android:id="@+id/view"
            android:layout_width="70sp"
            android:layout_height="40sp"
            android:layout_below="@id/total_files_size_tv"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/clear_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_toStartOf="@id/view"
            android:fontFamily="@font/consolas"
            android:text="@string/clear"
            android:textColor="#F44336"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pick_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_toEndOf="@id/view"
            android:fontFamily="@font/consolas"
            android:text="@string/pick"
            android:textColor="#2196F3"
            android:textSize="20sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/about_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:fontFamily="@font/consolas"
        android:text="@string/about"
        android:textSize="20sp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/launch_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:enabled="false"
        android:importantForAccessibility="no"
        android:src="@drawable/launch" />

</RelativeLayout>